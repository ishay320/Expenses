<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expenses" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Expenses" >
        <activity
            android:name="com.i320.expenses.UpdateActivity"
            android:label="Update"
            android:exported="true"
            android:parentActivityName="com.i320.expenses.FuelHistoryActivity"/>
        <activity
            android:name="com.i320.expenses.FuelHistoryActivity"
            android:exported="true"
            android:label="Fuel History"
            android:parentActivityName="com.i320.expenses.FuelActivity" />
        <activity
            android:name="com.i320.expenses.ManualInput"
            android:exported="true" />
        <activity
            android:name="com.i320.expenses.FuelActivity"
            android:exported="true"
            android:label="Fuel calculator"
            android:parentActivityName="com.i320.expenses.MainMenu" />
        <activity
            android:name="com.i320.expenses.MainMenu"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>