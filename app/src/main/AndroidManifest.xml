<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expenses">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Expenses">
        <activity
            android:name="com.i320.expenses.fuel.FuelSettingsActivity"
            android:exported="true"
            android:label="@string/title_activity_fuel_settings"
            android:parentActivityName="com.i320.expenses.fuel.FuelCalculatorActivity"/>
        <activity
            android:name="com.i320.expenses.fuel.FuelUpdateActivity"
            android:exported="true"
            android:label="Update"
            android:parentActivityName="com.i320.expenses.fuel.FuelHistoryActivity" />
        <activity
            android:name="com.i320.expenses.fuel.FuelHistoryActivity"
            android:exported="true"
            android:label="Fuel History"
            android:parentActivityName="com.i320.expenses.fuel.FuelCalculatorActivity" />
        <activity
            android:name="com.i320.expenses.ManualInput"
            android:exported="true" />
        <activity
            android:name="com.i320.expenses.fuel.FuelCalculatorActivity"
            android:exported="true"
            android:label="Fuel calculator"
            android:parentActivityName="com.i320.expenses.MainMenu" />
        <activity
            android:name="com.i320.expenses.MainMenu"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>